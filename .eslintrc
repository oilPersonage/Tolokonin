{
    "extends": "airbnb",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "max-len":"off",
      "react/prefer-stateless-function": "warn",
      "react/jsx-filename-extension": "off"
    },
    "env": {
      "es6": true,
      "node": false,
      "mocha": true
    },
    "globals": {
      "document": true
    }
  }
